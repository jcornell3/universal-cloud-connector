{
  "name": "universal-cloud-connector",
  "version": "1.0.0",
  "description": "Universal MCP Bundle for connecting to any remote SSE-based MCP server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "package": "npm run build && npm run create-bundle",
    "create-bundle": "bash scripts/create-bundle.sh"
  },
  "dependencies": {
    "eventsource": "^2.0.2"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.11",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "claude",
    "sse",
    "connector",
    "remote-server"
  ],
  "author": "MCP Community",
  "license": "MIT"
}
